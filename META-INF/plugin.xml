<idea-plugin version="2">
    <id>pl.project13.intellij.kanbanery</id>
    <name>IntelliJ Kanbanery</name>
    <description>
        A connector for IntelliJ Tasks for Kanbanery.
        You'll gain all what Tasks have to offer and even be able to select them from your Kanbanery board :-)
    </description>
    <version>1.0</version>
    <vendor logo="/kanbanery.png">Project13.pl + Kanbanery.com</vendor>
    <!--<idea-version since-build="8000"/>-->

    <depends>com.intellij.tasks</depends>
    <depends optional="true" config-file="java-contexts.xml">com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!--context providers-->
        <tasks.repositoryType implementation="com.intellij.tasks.kanbanery.KanbaneryRepositoryType"/>
    </extensions>

</idea-plugin>
